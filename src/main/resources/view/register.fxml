<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane fx:controller="controller.RegisterController" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10"
          vgap="10">
    <Text text="Create an Account" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

    <Label text="Full Name" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Username" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Password" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Button text="Login" GridPane.rowIndex="7" onAction="#handleLoadLogin" GridPane.columnIndex="0"/>
    <Button text="Register" GridPane.rowIndex="7" onAction="#handleRegistration" GridPane.columnIndex="1"/>

    <Label GridPane.rowIndex="11" fx:id="notificationLabel" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

</GridPane>