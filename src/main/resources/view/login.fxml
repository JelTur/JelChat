<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<GridPane fx:controller="controller.LoginController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Text text="Welcome to login page" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

    <Label text="Enter your username" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Enter your password" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Button text="Register" GridPane.rowIndex="3" onAction="#handleLoadRegister" GridPane.columnIndex="0"
            style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #502424"/>
    <Button text="Login" GridPane.rowIndex="3" onAction="#handleUserLogin" GridPane.columnIndex="1"
            style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: purple"/>

    <Label GridPane.rowIndex="5" fx:id="notificationLabel" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
</GridPane>