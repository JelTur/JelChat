<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          fx:controller="controller.ProfileController">
    <Label text="User Profile" GridPane.rowIndex="0" style="-fx-font-size: 20px; -fx-text-fill: purple"
           GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <Label text="User Name" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Label fx:id="userNameLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Name" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <Label fx:id="nameLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Button onAction="#handleLogout" text="Logout" GridPane.rowIndex="9" GridPane.columnIndex="0"
            style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 14px"/>
</GridPane>
